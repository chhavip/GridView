<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.timetable.MainActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head"
        android:layout_marginLeft="50dp"
        android:layout_centerHorizontal="true"
        android:text="Date and day" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
         >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="200dp" 
           android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="9-10" />

            <TextView
                android:id="@+id/first_desc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:clickable="true"
                android:background="@drawable/text_back"
                android:gravity="center"
                android:text="Period 1" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_marginBottom="10dp">
            
             <TextView
                android:id="@+id/time_2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="10 - 11" />

            <TextView
                android:id="@+id/second_desc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:clickable="true"
                android:background="@drawable/text_back"
                android:gravity="center"
                android:text="Period 2" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >
            
              <TextView
                android:id="@+id/time_3"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="11 - 12" />

            <TextView
                android:id="@+id/third_desc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:clickable="true"
                android:background="@drawable/text_back"
                android:gravity="center"
                android:text="Period 3" />
            
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
             >
            
              <TextView
                android:id="@+id/time_4"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="12 - 1" />

            <TextView
                android:id="@+id/fourth_desc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:clickable="true"
                android:background="@drawable/text_back"
                android:gravity="center"
                android:text="Period 4" />
            
        </TableRow>
        
         <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >
            
              <TextView
                android:id="@+id/time_5"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1 - 2" />

            <TextView
                android:id="@+id/fifth_desc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:clickable="true"
                android:background="@drawable/text_back"
                android:gravity="center"
                android:text="Period 5" />
            
        </TableRow>
        
          <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_marginBottom="10dp">
            
              <TextView
                android:id="@+id/time_6"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2 - 3" />

            <TextView
                android:id="@+id/sixth_desc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:clickable="true"
                android:background="@drawable/text_back"
                android:gravity="center"
                android:text="Period 6" />
            
        </TableRow>
        
           <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >
            
              <TextView
                android:id="@+id/time_7"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="3 - 4" />

            <TextView
                android:id="@+id/seventh_desc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:clickable="true"
                android:background="@drawable/text_back"
                android:gravity="center"
                android:text="Period 7" />
            
        </TableRow>
        
            <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >
            
              <TextView
                android:id="@+id/time_8"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="4 - 5" />

            <TextView
                android:id="@+id/eighth_desc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:clickable="true"
                android:background="@drawable/text_back"
                android:gravity="center"
                android:text="Period 8" />
            
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="37dp"
        android:text="Today&apos;s Timetable" />

</RelativeLayout>